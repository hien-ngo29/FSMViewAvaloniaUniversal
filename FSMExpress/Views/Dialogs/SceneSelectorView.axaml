<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dlg="using:FSMExpress.ViewModels.Dialogs"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="450"
             x:Class="FSMExpress.Views.Dialogs.SceneSelectorView"
             x:DataType="dlg:SceneSelectorViewModel">
  <Grid Margin="10,10,10,10" KeyDown="MainGrid_KeyDown">
    <Grid RowDefinitions="Auto,*,Auto"
          HorizontalAlignment="Stretch">
      <TextBox Grid.Row="0"
               Text="{Binding SearchText}"
               Name="searchTextBox" />
      <ListBox Grid.Row="1"
               ItemsSource="{Binding Entries}" SelectedItem="{Binding SelectedEntry}"
               DoubleTapped="ListBoxItem_DoubleTapped" />
      <Grid Grid.Row="2" ColumnDefinitions="*,*">
        <Button Grid.Column="0" Command="{Binding PickSelectedEntry}" IsEnabled="{Binding IsSceneSelected}">Ok</Button>
        <Button Grid.Column="1" Command="{Binding PickCancel}">Cancel</Button>
      </Grid>
    </Grid>
  </Grid>
</UserControl>
